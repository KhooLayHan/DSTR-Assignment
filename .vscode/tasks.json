{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++20 Debug: Build DSTR Assignment Task with ASAN",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-fsanitize=address",
                "-fno-omit-frame-pointer",
                "--std=c++20",
                "-O0",
                "-g",
                "./Main.cpp",
                "./FileHandling.cpp",
                "./Benchmark.cpp",
                "./Dataset.cpp",
                "./SimpleLogger.cpp",
                "./LinkedList.cpp",
                "-o",
                "./Main"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "environment": {
                    "LSAN_OPTIONS": "verbosity=1:log_threads=1"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
